{
  "name": "sketchi",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "convex": "^1.31.2"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F @sketchi/backend dev",
    "dev:setup": "turbo -F @sketchi/backend dev:setup",
    "ruler:apply": "bunx @intellectronica/ruler@latest apply --local-only"
  },
  "dependencies": {
    "@sketchi/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@sketchi/config": "workspace:*",
    "@types/node": "^22.0.0",
    "turbo": "^2.6.3",
    "typescript": "catalog:",
    "ultracite": "7.0.12"
  },
  "packageManager": "bun@1.3.5",
  "version": "0.2.1"
}
